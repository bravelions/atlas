{
  "name": "@atlas/server",
  "description": "atlas koa.js api server",
  "version": "0.0.1",
  "private": true,
  "license": "UNLICENSED",
  "lint-staged": {
    "**/*.ts*": [
      "yarn lint"
    ]
  },
  "devDependencies": {
    "@types/http-server": "^0.10.1",
    "@types/koa": "^2.11.6",
    "@types/koa-compress": "^4.0.1",
    "@types/koa-joi-router": "^5.2.4",
    "@types/koa-mount": "^4.0.0",
    "@types/koa-range": "^0.3.2",
    "@types/koa__cors": "^3.0.2",
    "@types/koa__router": "^8.0.3"
  },
  "dependencies": {
    "@koa/cors": "^3.1.0",
    "@koa/router": "^10.0.0",
    "@mikro-orm/cli": "^4.4.3",
    "@mikro-orm/core": "^4.4.3",
    "@mikro-orm/postgresql": "^4.4.3",
    "koa": "^2.13.0",
    "koa-compress": "^5.0.1",
    "koa-joi-router": "^7.0.0",
    "koa-mount": "^4.0.0",
    "koa-range": "^0.3.0",
    "ts-node": "^9.1.1"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/mikro-orm.config.ts",
      "./dist/mikro-orm.config.js"
    ]
  },
  "scripts": {
    "build": "tsc -b .",
    "build:clean": "yarn build --clean",
    "lint": "eslint ./src --ext .ts",
    "precommit": "lint-staged",
    "prepush": "yarn build",
    "start": "nodemon src/index.ts",
    "db:seed": "yarn mikro-orm database:import ./seed-data/seed-data.sql"
  }
}
